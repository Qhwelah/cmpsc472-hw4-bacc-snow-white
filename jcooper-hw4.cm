// Print mutex is handled in calling functions
void printFunc(){
    if(stringLength(printOne) > 0){
        cout << printOne;
    }

    if(stringLength(printTwo) > 0){
        cout << printTwo;
    }

    if(stringLength(printThree) > 0){
        cout << printThree;
    }
    
    cout << endl;

    // Reset print variables
    stringCopy(printOne, "");
    stringCopy(printTwo, "");
    stringCopy(printThree, "");
}


