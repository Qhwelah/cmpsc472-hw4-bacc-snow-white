void queen(){
    // ---- EXAMPLE PRINT CALL: FEED BY GLOBAL VARIABLE ---- //
    // Wait for print mutex
    wait(print_mux);
    
    // In print CS:
    // Set global print strings
    stringCopy(printOne, qOrder);
    
    // Call print function
    printFunc();

    // End print CS
    signal(print_mux);
    // ----------------------------------------------------- //


    signal(s_qSentH);




}


